{
  "name": "the-content-farm-terminator",
  "version": "3.2",
  "description": "A chrome plugin for blocking content farm results on search pages.",
  "author": {
    "name": "hyperbola",
    "email": "me@hyperbola.me",
    "url": "https://github.com/wdzeng"
  },
  "homepage": "https://chrome.google.com/webstore/detail/the-content-farm-terminat/chhekpgdckchblnfdelceaigmlfbakgn",
  "repository": {
    "type": "git",
    "url": "https://github.com/wdzeng/The-Content-Farm-Terminator.git"
  },
  "scripts": {
    "build": "yarn tsc && yarn sass && yarn zip",
    "dev": "concurrently --kill-others 'tsc -w' 'sass --watch --no-source-map ./src/css/popup.scss:./src/css/popup.css ./src/css/inject.scss:./src/css/inject.css'",
    "tsc": "tsc",
    "sass": "sass --no-source-map ./src/css/popup.scss:./src/css/popup.css ./src/css/inject.scss:./src/css/inject.css",
    "zip": "zip -r The-Content-Farm-Terminator.zip ./src -x *.ts -x *.scss",
    "clean": "rm -f src/scripts/*.js src/css/*.css The-Content-Farm-Terminator.zip"
  },
  "devDependencies": {
    "@types/chrome": "0.0.184",
    "@typescript-eslint/eslint-plugin": "^5.22.0",
    "@typescript-eslint/parser": "^5.22.0",
    "concurrently": "^7.1.0",
    "eslint": "^8.14.0",
    "sass": "^1.51.0",
    "typescript": "^4.6.4"
  },
  "bugs": {
    "url": "https://github.com/wdzeng/The-Content-Farm-Terminator/issues"
  },
  "license": "GPL-2.0"
}

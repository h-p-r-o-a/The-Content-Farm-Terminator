{
    "name": "__MSG_extName__",
    "version": "1.0",
    "description": "__MSG_description__",
    "manifest_version": 2,
    "author": "Hyperbola",
    "permissions": [
        "declarativeContent",
        "activeTab",
        "storage"
    ],
    "background": {
        "scripts": [
            "/js/database.js",
            "/js/background.js"
        ],
        "persistent": false
    },
    "content_scripts": [
        {
            "matches": [
                "*://www.google.com/search*"
            ],
            "js": [
                "/lib/jquery.js",
                "/js/database.js",
                "/js/blocker.js"
            ]
        }
    ],
    "icons": {
        "16": "/images/icon16.png",
        "32": "/images/icon32.png",
        "64": "/images/icon64.png",
        "128": "/images/icon128.png"
    },
    "browser_action": {
        "default_popup": "/popup.html",
        "default_icon": {
            "16": "/images/icon16.png",
            "32": "/images/icon32.png",
            "64": "/images/icon64.png",
            "128": "/images/icon128.png"
        }
    },
    "default_locale": "en"
}